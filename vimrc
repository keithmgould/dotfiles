source ~/.vim/bundle.vim
source ~/.vim/mappings.vim

"------------------------------------
" Look and Feel
"------------------------------------
set guifont=Monaco:h11
set background=dark

" show line numbers
set number
set ruler

" enable syntax highlighting
syntax enable

" color scheme
colorscheme solarized

"------------------------------------
" Formatting
"------------------------------------

" Convert tabs to spaces
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab


